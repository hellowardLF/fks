<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".kuaishou.ksykit.ConfigActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="录制配置项"
            android:textSize="20sp"
            android:textColor="#ffffff" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:background="#121217">
                <TextView
                    android:layout_width="@dimen/config_text_type_width"
                    android:layout_height="wrap_content"
                    android:text="分辨率"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size"/>
                <TextView
                    android:id="@+id/record_config_r720p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:padding="@dimen/config_text_padding"
                    android:text="720P"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size"
                    android:background="@drawable/config_text_bg"/>
                <TextView
                    android:id="@+id/record_config_r1080p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:padding="@dimen/config_text_padding"
                    android:text="1080P"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size"
                    android:background="@drawable/config_text_bg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="#121217">
                <TextView
                    android:layout_width="@dimen/config_text_type_width"
                    android:layout_height="wrap_content"
                    android:text="编码方法"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size" />
                <TextView
                    android:id="@+id/record_config_h264"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:padding="@dimen/config_text_padding"
                    android:text="H.264"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size"
                    android:background="@drawable/config_text_bg"/>
                <TextView
                    android:id="@+id/record_config_h265"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:padding="@dimen/config_text_padding"
                    android:text="H.265"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size"
                    android:background="@drawable/config_text_bg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="#121217">
                <TextView
                    android:layout_width="@dimen/config_text_type_width"
                    android:layout_height="wrap_content"
                    android:text="编码方式"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size" />
                <TextView
                    android:id="@+id/record_config_hw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:padding="@dimen/config_text_padding"
                    android:text="硬编"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size"
                    android:background="@drawable/config_text_bg"/>
                <TextView
                    android:id="@+id/record_config_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:padding="@dimen/config_text_padding"
                    android:text="软编"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size"
                    android:background="@drawable/config_text_bg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="#121217">
                <TextView
                    android:layout_width="@dimen/config_text_type_width"
                    android:layout_height="wrap_content"
                    android:text="编码性能"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size" />
                <TextView
                    android:id="@+id/record_config_low_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:padding="@dimen/config_text_padding"
                    android:text="低功耗"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size"
                    android:background="@drawable/config_text_bg"/>
                <TextView
                    android:id="@+id/record_config_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:padding="@dimen/config_text_padding"
                    android:text="平衡"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size"
                    android:background="@drawable/config_text_bg"/>
                <TextView
                    android:id="@+id/record_config_high_performance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:padding="@dimen/config_text_padding"
                    android:text="高性能"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size"
                    android:background="@drawable/config_text_bg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="#121217"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <TextView
                    android:layout_width="@dimen/config_text_type_width"
                    android:layout_height="wrap_content"
                    android:text="采集帧率"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size" />
                <EditText
                    android:id="@+id/record_config_frameRate"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:theme="@style/MyEditText"
                    android:singleLine="true"
                    android:inputType="number"
                    android:text="30"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/config_text_size"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:padding="@dimen/config_text_padding"
                    android:text="fps"
                    android:drawableBottom="#ffffff"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="#121217"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <TextView
                    android:layout_width="@dimen/config_text_type_width"
                    android:layout_height="wrap_content"
                    android:text="视频码率"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size" />
                <EditText
                    android:id="@+id/record_config_video_bitrate"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:theme="@style/MyEditText"
                    android:text="4000"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/config_text_size"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:padding="@dimen/config_text_padding"
                    android:text="kbps"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="#121217"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <TextView
                    android:layout_width="@dimen/config_text_type_width"
                    android:layout_height="wrap_content"
                    android:text="音频码率"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size" />
                <EditText
                    android:id="@+id/record_config_audio_bitrate"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:theme="@style/MyEditText"
                    android:singleLine="true"
                    android:inputType="number"
                    android:text="48"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/config_text_size"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:padding="@dimen/config_text_padding"
                    android:text="kbps"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="#121217">
                <TextView
                    android:layout_width="@dimen/config_text_type_width"
                    android:layout_height="wrap_content"
                    android:text="横竖屏"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size" />
                <TextView
                    android:id="@+id/record_config_landscape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:padding="@dimen/config_text_padding"
                    android:text="横屏"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size"
                    android:background="@drawable/config_text_bg"/>
                <TextView
                    android:id="@+id/record_config_portrait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:padding="@dimen/config_text_padding"
                    android:text="竖屏"
                    android:textColor="@drawable/config_text_color"
                    android:textSize="@dimen/config_text_size"
                    android:background="@drawable/config_text_bg"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:clickable="true"
            android:id="@+id/config_import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/import_local" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="本地导入"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:id="@+id/config_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/start_record" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="开始录制"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
