<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tv.qishi.milian.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/fragment_home"
            android:name="tv.qishi.milian.home.fragment.HomeFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <fragment
            android:id="@+id/fragment_own"
            android:name="tv.qishi.milian.own.OwnFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <fragment
            android:id="@+id/fragment_attention"
            android:name="tv.qishi.milian.kuaishou.HomeAttentionFgt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <com.smart.androidui.widget.menu.BottomTabMenu
            android:id="@+id/bottomTabMenu"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:tab_image_width="20dp"
            app:tab_image_height="20dp"
            android:background="@color/white"
            app:tab_image_middle_divider_width="80dp"
            app:tab_textColor_normal="@color/black"
            app:tab_textColor_selected="@color/colorTheme"
            app:tab_textSize="12sp"/>
    </LinearLayout>

</FrameLayout>
